<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FolderPickerDemo"
             x:Class="FolderPickerDemo.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout HorizontalOptions="Center" Spacing="20">
        <Button Text="Pick a folder" Clicked="Button_Clicked"/>
        <Button Text="Open folder" Clicked="Button2_Clicked"/>
        <Label x:Name="result"/>
    </VerticalStackLayout>
</ContentPage>
